<?xml version="1.0" encoding="utf-8"?>
<roide.nanod.popularmovies.ui.TallCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/half_margins"
    >

    <ImageView
        android:id="@+id/element_discover_grid_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:transitionName="@string/transition_movie_display_image"
        android:layout_gravity="center"
        android:padding="@dimen/eighth_margins"
        />

</roide.nanod.popularmovies.ui.TallCardView>